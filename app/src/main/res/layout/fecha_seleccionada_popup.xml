<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:background="@drawable/circlebackgroundforpopup"
    android:orientation="vertical">


    <TextView
        android:id="@+id/TituloPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="QuÃ© persona cumple este dia?"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/txtNombrePersona"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Nombre de la persona"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtEdadPersona"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Edad"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/txtFechaSeleccionada"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Fecha"
        android:inputType="date" />

    <EditText
        android:id="@+id/txtIdeasRegalo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Ideas para regalar"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/buttonGuardarDatosPopUp"
            style="?buttonBarButtonStyle"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/ovalo"
            android:backgroundTint="#E9EC8E"
            android:backgroundTintMode="add"
            android:text="GUARDAR"
            android:textColor="@color/black" />
        />

        <Button
            android:id="@+id/buttonClosePopUp"
            style="?buttonBarButtonStyle"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ovalo"
            android:backgroundTint="#E9EC8E"
            android:backgroundTintMode="add"
            android:text="CERRAR"
            android:textColor="@color/black" />
        />

    </LinearLayout>


</LinearLayout>